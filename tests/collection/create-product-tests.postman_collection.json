{
	"info": {
		"_postman_id": "create-product-collection-id",
		"name": "Create Product API Tests",
		"description": "Test API tạo mới sản phẩm với các trường hợp khác nhau",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response status code matches expected\", function () {",
							"    const expectedStatus = pm.iterationData.get(\"expected_status\") || 201;",
							"    pm.expect(pm.response.code).to.equal(parseInt(expectedStatus));",
							"});",
							"",
							"pm.test(\"Response time is less than 2000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{access_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{name}}\",\n  \"description\": \"{{description}}\",\n  \"price\": {{price}},\n  \"category_id\": {{category_id}},\n  \"brand_id\": {{brand_id}},\n  \"product_image_id\": {{product_image_id}},\n  \"is_location_offer\": {{is_location_offer}},\n  \"is_rental\": {{is_rental}}\n}"
				},
				"url": {
					"raw": "{{base_url}}/products",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"products"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8091"
		},
		{
			"key": "access_token",
			"value": ""
		}
	]
}